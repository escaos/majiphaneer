{
	"$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": [
			"**/*",
			"!!**/.vercel",
			"!!**/dist",
			"!!**/.astro"
		],
		"ignoreUnknown": false
	}
}
